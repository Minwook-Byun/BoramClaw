# BoramClaw Environment Variables Template
# Copy this file to .env and fill in your values

# ===========================================
# LLM Settings
# ===========================================

# LLM Provider: 'claude' or 'ollama' or 'hybrid'
LLM_PROVIDER=claude

# Claude API (for 'claude' or 'hybrid' mode)
ANTHROPIC_API_KEY=sk-ant-xxxxx
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=1024

# Ollama (for 'ollama' or 'hybrid' mode)
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
# Other recommended models:
#   - llama3.2:3b (빠름, 경량)
#   - mistral:7b (균형)
#   - qwen2.5:7b (코딩 특화)
#   - llama3.1:8b (범용)

# Hybrid Mode Settings
PREFER_LOCAL_LLM=0  # 1이면 Ollama 우선, 0이면 Claude 우선

# ===========================================
# Tool Execution Settings
# ===========================================
CUSTOM_TOOL_DIR=tools
TOOL_WORKDIR=.
TOOL_TIMEOUT_SECONDS=300
STRICT_WORKDIR_ONLY=1

# ===========================================
# Scheduler Settings
# ===========================================
SCHEDULER_ENABLED=1
SCHEDULER_POLL_SECONDS=300
SCHEDULE_FILE=schedules/jobs.json

# ===========================================
# Logging Settings
# ===========================================
CHAT_LOG_FILE=logs/chat_log.jsonl
LOG_BASE_DIR=logs
SESSION_LOG_SPLIT=0

# ===========================================
# Health Server (for Watchdog)
# ===========================================
HEALTH_SERVER_ENABLED=1
HEALTH_PORT=8080

# ===========================================
# Agent Mode
# ===========================================
AGENT_MODE=interactive  # or 'daemon'

# ===========================================
# screenpipe Integration (Optional)
# ===========================================
SCREENPIPE_API_URL=http://localhost:3030

# ===========================================
# Web UI (Optional)
# ===========================================
WEB_UI_ENABLED=0
WEB_UI_PORT=8091

# ===========================================
# Telegram Integration (Optional)
# ===========================================
TELEGRAM_ENABLED=0
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_CHAT_ID=your_chat_id_here

# ===========================================
# Security Settings
# ===========================================
ENCRYPT_LOGS=0
ENCRYPTION_KEY_ID=default

# ===========================================
# Experimental Features
# ===========================================
FORCE_TOOL_USE=0
DRY_RUN=0
CHECK_DEPENDENCIES_ON_START=0
